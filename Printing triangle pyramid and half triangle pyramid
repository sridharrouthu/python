n=int(input("enter the height of triangle: \n"))
for i in range(1,n+1):
  for j in range(1,n+1-i):
    print(" ",end=' ')
  for k in range(1,i+1):
    print("*",end=' ')
  for l in range(1,i):
    print("*",end=' ')
  print('\n')
  

n=int(input("enter height of triangle Pyramid. \n"))
for i in range(1,n+1):
  for j in range (1,n+1-i):
    print(" ",end=' ')
  for k in range(1,i+1):
    print("*", end=' ')
  print("\n")

